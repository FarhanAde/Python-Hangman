<RoundedButton@Button>
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba: (48/255, 84/255, 150/255, 1) if self.state == "normal" else (48/255, 84/255, 150/255, .8)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [20]

<PlayingScreen>
    guessChar: guessID
    orientation: "vertical"

    FloatLayout:
        Image:
            source: "images/homeBgRight.png"
            size_hint: 1, 1
        
        Image:
            id: theMan
            source: "images/Hangman_Picture1.png"
            size_hint: .3, .4
            pos_hint: {"x": .35, "y": .5}

        BoxLayout:
            size_hint: .5, .15
            pos_hint: {"x": .25, "y": .2}
            orientation: "vertical"
            TextInput:
                id: guessID
                halign: "center"
                valign: "middle"
                multiline: False
            Button:
                id: guessButton
                markup: True
                size_hint: 1, 1
                text: "[font=BazookaRegular]Enter guess[/font]"
                on_release: root.submitGuess()
        
        Label:
            id: guessesLeft
            markup: True
            text: "[font=BazookaRegular]Lives Left:\n5[/font]"
            color: "black"
            font_size: 18
            halign: "center"
            size_hint: .3, .2
            pos_hint: {"x": .1, "y":.85}
        
        Label:
            id: display
            markup: True
            text: "[font=BazookaRegular]_______________[/font]"
            color: "black"
            font_size: 30
            halign: "center"
            size_hint: .9, .25
            pos_hint: {"x": .05, "y":.35}

        Button:
            id: backButton
            background_normal: "images/back1.png"
            background_down: "images/back2.png"
            size_hint: .222, .1
            pos_hint: {"x": .39, "y": .05}
            on_release: root.returnToChoiceScreen()

<GameEndedScreen>:
    orientation: "vertical"

    FloatLayout:
        Image:
            source: "images/homeBgRight.png"
            size_hint: 1, 1
        
        Label:
            id: header
            size_hint: .8, .3
            pos_hint: {"x": .1, "y": .7}
            markup: True
            text: "[font=BazookaRegular]YOU LOSE![/font]"
            font_size: 36
            halign: "center"
            colour: "red"
        
        Label:
            id: message
            size_hint: .8, .2
            pos_hint: {"x": .1, "y": .5}
            markup: True
            text: "[font=BazookaRegular]The correct\nword was[/font]"
            font_size: 20
            halign: "center"
            color: "black"
        
        Label:
            size_hint: .8, .2
            pos_hint: {"x": .1, "y": .25}
            markup: True
            text: "[font=BazookaRegular]Click to go to the home screen or\nstart a new game[/font]"
            font_size: 18
            halign: "center"
            color: "black"
        
        Button:
            background_normal: "images/home1.png"
            background_down: "images/home2.png"
            size_hint: 2/9, .1
            pos_hint: {"x": 2/9, "y": .05}
            on_release: root.returnHome()
        
        Button:
            background_normal: "images/resume1.png"
            background_down: "images/resume2.png"
            size_hint: 2/9, .1
            pos_hint: {"x": 5/9, "y": .05}
            on_release: root.returnToChoiceScreen()