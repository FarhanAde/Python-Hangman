<HomeScreen>
    orientation: "vertical"

    FloatLayout:
        Image:
            source: "images/homeBgLeft.png"
            size_hint: 1, 1

        Label:
            markup: True
            text: "[font=PixelSleigh]Hangman:\n[b]The Game[/b][/font]"
            halign: "center"
            valign: "middle"
            color: "black"
            font_size: 32
            size_hint: 0.6, 0.2
            pos_hint: {"x": .2, "y": .45}
        
        Button:
            background_normal: "images/playButton1.png"
            background_down: "images/playButton2.png"
            size_hint: .5, .1
            pos_hint: {"x": .25, "y": .3}
            on_release: root.goToWordChoice()
        
        Button:
            background_normal: "images/instruction1.png"
            background_down: "images/instruction2.png"
            size_hint: .5, .1
            pos_hint: {"x": .25, "y": .15}
            on_release: root.goToInstructions()
        
<InstructionScreen>
    orientation: "vertical"

    FloatLayout:
        Image:
            source: "images/homeBgRight.png"
            size_hint: 1, 1

        Label:
            markup: True
            text: "[font=PixelSleigh]Instructions[/font]"
            halign: "center"
            color: "black"
            font_size: 25
            size_hint: 0.6, 0.2
            pos_hint: {"x": .2, "y": .75}

        Label:
            markup: True
            text: "[font=BazookaRegular]Before playing you can select\nthe length of the word\nyou wish to guess[/font]"
            halign: "center"
            color: "black"
            font_size: 20
            size_hint: 0.6, 0.2
            pos_hint: {"x": .2, "y": .6}
        
        Label:
            markup: True
            text: "[font=BazookaRegular]You'll then have 5 lives and\nyou must guess the word\nbefore your lives run out[/font]"
            halign: "center"
            color: "black"
            font_size: 20
            size_hint: 0.6, 0.2
            pos_hint: {"x": .2, "y": .4}

        Label:
            markup: True
            text: "[font=BazookaRegular]Make 5 mistakes and\nit's game over![/font]"
            halign: "center"
            color: "black"
            font_size: 20
            size_hint: 0.6, 0.2
            pos_hint: {"x": .2, "y": .2}

        Button:
            background_normal: "images/home1.png"
            background_down: "images/home2.png"
            size_hint: .222, .1
            pos_hint: {"x": .39, "y": .1}
            on_release: root.returnHome()

